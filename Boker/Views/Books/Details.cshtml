@model Boker.Models.Book

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Book</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Image" alt="Book Image" width="200" height="300" />
        </dd>
        <dt class = "col-sm-2">
            Tytuł:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            Opis:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Autor:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Author)
        </dd>
        <dt class = "col-sm-2">
            Ilość stron:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TotalPages)
        </dd>
        <dt class = "col-sm-2">
            Gatunek:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookType.Name)
        </dd>
        <dt class = "col-sm-2">
            Użytkownik:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.Email)
        </dd>
    </dl>
</div>
<div>
    <a class="custom-button3 pastel-pink" asp-action="Index">Wróć</a>
    <a class="custom-button3 pastel-green" asp-action="Create" asp-controller="BookReviews" asp-route-bookId="@Model.Id">Napisz recenzję</a>
    <a class="custom-button3 pastel-green" asp-action="Create" asp-controller="MyLibs" asp-route-bookId="@Model.Id">Dodaj do biblioteki</a>

    <h4>Recenzje</h4>
    <ul>
        @foreach (var review in Model.Reviews)
        {
            <li>
                <strong>@review.ReviewText</strong>
                <br />
                Added by: @review.User.UserName
                <br />
                Added at: @review.ReviewDate.ToString("dd/MM/yyyy HH:mm")
            </li>
        }
    </ul>
</div>