@model IEnumerable<Boker.Models.MyLib>

@{
    ViewData["Title"] = "Moja biblioteka";
}

<h1>Moja biblioteka</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Tytuł
            </th>
            <th>
                Ulubione
            </th>
            <th>
                Początek czytania
            </th>
            <th>
                Koniec czytania
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsFavorite)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartedReading)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FinishedReading)
                </td>
                <td>
                    <a class="custom-button3 pastel-blue" asp-action="Edit" asp-route-id="@item.Id">Edytuj</a>
                    <a class="custom-button3 pastel-green" asp-action="Details" asp-route-id="@item.Id">Szczegóły</a>
                    <a class="custom-button3 pastel-pink" asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>
