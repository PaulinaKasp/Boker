<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BØKER</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Boker.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-0">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BØKER</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="btn btn-custom" asp-area="" asp-controller="Books" asp-action="Index">Książki</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-custom" asp-area="" asp-controller="MyLibs" asp-action="Index">Moja biblioteka</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-custom" asp-area="" asp-controller="BookTypes" asp-action="Index">Gatunki</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-custom" asp-area="" asp-controller="BookReviews" asp-action="Index">Recenzje</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container margines-top">
        <main role="main" class="kolor-bg">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted kolor-bg ">
        <div class="container kolor-txt" style="text-align:center">
            &copy; 2024 - BØKER
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
